/* pages/boss/boss.wxss */

page {
  background-color: #fafafa;
}

.header {
  font-size: 9.75pt;
  color: rgba(0, 0, 0, 0.38);
  padding: 40rpx 40rpx 18rpx 40rpx;
  border-bottom: 1rpx solid #eee;
}

.content {
  background: #fff;
  border-bottom: 1rpx solid #eee;
}

.item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-left: 40rpx;
  padding: 20rpx 40rpx 20rpx 0;
}

.item-left {
  padding-right: 20rpx;
  color: rgba(0, 0, 0, 0.87);
  font-size: 12.75pt;
  line-height: 48rpx;
}

.item-right {
  flex: 1;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  font-size: 12.75pt;
  color: rgba(0, 0, 0, 0.54);
  line-height: 48rpx;
}

.bottom {
  border-bottom: 1rpx solid #eee;
}

.content-bottom {
  margin-top: 40rpx;
  background: #fff;
  border-bottom: 1rpx solid #eee;
  border-top: 1rpx solid #eee;
}

.arrow {
  border-top: 4rpx solid #c7c7c7;
  border-right: 4rpx solid #c7c7c7;
  width: 20rpx;
  height: 20rpx;
  transform: rotate(45deg);
}

.feedback {
  position: absolute;
  bottom: 80rpx;
  left: 42%;
  font-size: 9.75pt;
  color: #576b95;
}
.click {
    background-color: rgba(200,200,200,0.3);
}
