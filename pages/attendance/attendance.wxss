/* pages/attendance/attendance.wxss */

page {
  background: #fafafa;
}

.header {
  padding: 40rpx 40rpx 20rpx 40rpx;
  color: rgba(0, 0, 0, 0.38);
  font-size: 9.75pt;
  border-bottom: 1px solid #eee;
}

.vLine {
  background: #fff;
  border-bottom: 1rpx solid #eee;
}

.vMonning {
  height: 88rpx;
  margin-left: 40rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.vAfternoon {
  height: 88rpx;
  margin-left: 40rpx;
  background: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.item-left {
  flex: 1;
  line-height: 24px;
  font-size: 12.75pt;
  color: #000;
}

.item-right {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  color: rgba(0, 0, 0, 0.54);
}

.picker {
  padding: 10rpx;
  font-size: 12.75pt;
}

.button {
  margin-top: 100rpx;
  width: 80%;
  background: #22a1e0;
  color: #fff;
}
