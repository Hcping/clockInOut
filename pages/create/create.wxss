.create {
    height: 100%;
    /*background: #eee;*/
}

.header {
    height: 100rpx;
    background: #eee;
    font-size: 14px;
    padding-left: 40rpx;
    color: #888888;
    line-height: 100rpx;
}

.company {
    /*background: blue;*/
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    border-bottom: 1px solid #eee;
    height: 88rpx;
    margin-left: 20rpx;
    box-sizing: border-box;
    font-size: 17px;
    line-height: 24px;
}

.company input {
    /*background: lightgoldenrodyellow;*/
    padding-left: 32rpx;
	color: rgba(0, 0, 0);
    font-size: 12.75pt;
    flex: 1
}
.company icon{
    margin-right: 20rpx;
    height: 24px;
}
.location {
    padding: 20rpx 40rpx 20rpx 0rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    border-bottom: 1px solid #eee;
    margin-left: 20rpx;
    box-sizing: border-box;
    font-size: 17px;
    line-height: 24px;    
}
.address {
    padding-left: 20rpx;
    flex: 1;
   	color: rgba(0, 0, 0, 0.54);
    font-size: 12.75pt;
}

.arrow {
    border-top: 2px solid #c7c7c7;
    border-right: 2px solid #c7c7c7;
    width: 10px;
    height: 10px;
    transform: rotate(45deg);
}

.error {
    padding: 20rpx;
    font-size: 14px;
    color: red;
}

.button {
    margin: 334rpx 40rpx;
}

.default-button {
    background-color: #22a1e0;
    font-size: 18px; 
}

.hover {
    background-color: #22a1e0;
    opacity: 0.7;
}